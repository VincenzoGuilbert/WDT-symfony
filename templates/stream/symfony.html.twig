{% extends "base.html.twig" %}

{% block body %}


    <div class="d-flex justify-content-around align-items-center mt-5 mb-5">
        <p style="width: 78px;"></p>
        <h2 class="text-center">Tuto</h2>
        <a href="{{ path('create') }}" class="btn btn-primary">Ajouter</a>
    </div>

    {% for video in videos %}
        <div class="row">
            <div class="Card card m-auto shadow col-lg-5 col-sm-10">
                <div class="row no-gutters">
                    <div class="col-md-4">
                        <img src="{{ video.thumbnails }}" class="card-img img-fluid" alt="...">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">{{ video.title }}</h5>
                            <p class="card-text">{{ video.content | slice(0, 100) ~ '...' | nl2br }}</p>
                            <p class="card-text"><small class="text-muted">{{ video.createdAt | date('d/m/Y') }} Ã  {{ video.createdAt | date('H:i') }}</small></p>
                            <a class="btn-outline-primary btn float-right mb-3" href="{{ path('show', {id: video.id}) }}" role="button">voir</a>
                        </div>
                    </div>
                </div>
            </div> 
        </div>
        <div class="mb-4"></div>

    {% endfor %}
 
{% endblock %}
