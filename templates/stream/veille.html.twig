{% extends "base.html.twig" %}

{% block body %}


    <div class="d-flex justify-content-around align-items-center mt-5 mb-5">
        <p style="width: 78px;"></p>
        <h2 class="text-center">Veille technologique</h2>
        <a href="{{ path('veilleCreate') }}" class="btn btn-primary">Ajouter</a>
    </div>

    {% for veille in veilles %}
        <div class="veilleCard card m-auto shadow" style="max-width: 40%;">
            <div class="row no-gutters">
                <div class="col-md-4">
                    <img src="{{ veille.thumbnails }}" class="card-img" alt="...">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">{{ veille.title }}</h5>
                        <p class="card-text"><small class="text-muted">{{ veille.createdAt | date('d/m/Y') }} Ã  {{ veille.createdAt | date('H:i') }}</small></p>
                        <a class="btn-outline-primary btn float-right mb-3" href="{{ path('veilleShow', {id: veille.id}) }}" role="button">voir</a>
                    </div>
                </div>
            </div>
        </div> 
        <div class="mb-4"></div>

    {% endfor %}
 
{% endblock %}